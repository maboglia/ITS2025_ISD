package demo;

public class CounterDemo {

	public static void main(String[] args) {
		
		Counter c1 = new Counter(0);
		c1.incrementa();
		c1.incrementa();
		c1.incrementa();
		c1.decrementa();
		System.out.println("Il valore del contatore è: " + c1.getValoreCounter()  );
		
		Counter c2 = new Counter(90);
		c2.incrementa();
		c2.incrementa();
		c2.incrementa();
		System.out.println("Il valore del contatore è: " + c2.getValoreCounter()  );
		

	}

}
